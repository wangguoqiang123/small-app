.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 25rpx;
  color: #ccc;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image {
  width: 100%;
  height: 360rpx;
  margin: 0 auto;
}

.post-content {
  color: #c0c0c0;
  font-size: 28rpx;
  margin-bottom: 20px;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-icon {
  font-size: 13px;
  line-height: 16px;
  margin: 10px 0 10px 0;
  flex-direction: row;
}

.post-icon-image {
  width: 16px;
  height: 16px;
  margin: 0 20rpx 0 20rpx;
  vertical-align: middle;
}

.post-icon-font {
  vertical-align: middle;
  color: #c0c0c0;
}