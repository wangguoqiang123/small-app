.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 100rpx;
}

.user-name {
  font-size: 40rpx;
  margin-top: 200rpx;
  font-weight: bold;
}

.moto-container {
  border: 1px solid #405f80;
  margin-top: 200rpx;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.moto {
  font-size: 25rpx;
  line-height: 80rpx;
  font-weight: bold;
  color: #405f80;
}

page {
